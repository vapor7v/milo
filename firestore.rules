rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read their own data and allow authenticated users to list users
      allow read, list: if request.auth != null;
      // Allow users to write to their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /chats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /chats/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /wellness_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /task_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /task_progress/{userId}/daily/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /journal_entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}